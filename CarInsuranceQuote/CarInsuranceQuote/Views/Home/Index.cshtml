@using (Html.BeginForm("Estimate", "Home", FormMethod.Post))
{
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <div class="card">
                <div class="card-header text-center">
                    <h5>Car Insurance Quote</h5>
                </div>
                <div class="card-body mx-auto">
                    <div class="form-group">
                        <h5><label for="FirstName">First Name</label></h5>
                        <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="LastName">Last Name</label></h5>
                        <input type="text" class="form-control" id="LastName" name="LastName" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="email">Email</label></h5>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="birthday">Birthday</label></h5>
                        <input type="date" class="form-control" id="birthday" name="birthday" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="CarYear">Car Year</label></h5>
                        <input type="number" class="form-control" id="CarYear" name="CarYear" placeholder="Ex: 2015" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="CarMake">Car Make</label></h5>
                        <input type="text" class="form-control" id="CarMake" name="CarMake" placeholder="Ex: Honda" required>
                    </div>
                    <div class="form-group">
                        <h5><label for="CarModel">Car Model</label></h5>
                        <input type="text" class="form-control" id="CarModel" name="CarModel" placeholder="Ex: Civic" required>
                    </div>
                    <div class="form-group">
                        <h5>D.U.I.</h5>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="dui" id="duiTrue" value="true">
                            <label class="form-check-label" for="duiTrue">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="dui" id="duiFalse" value="false" checked>
                            <label class="form-check-label" for="duiFalse">False</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <h5><label for="SpeedingTickets">Number of Speeding Tickets</label></h5>
                        <input type="number" min="0" class="form-control" id="SpeedingTickets" name="SpeedingTickets" required>
                    </div>
                    <div class="form-group">
                        <h5>Coverage</h5>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="coverage" id="FullCoverage" value="full" checked>
                            <label class="form-check-label" for="FullCoverage">Full Coverage</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="coverage" id="LiabilityCoverage" value="liability">
                            <label class="form-check-label" for="LiabilityCoverage">Liability</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Get Estimate</button>
                </div>
            </div>
        </div>
    </div>
</div>
}
